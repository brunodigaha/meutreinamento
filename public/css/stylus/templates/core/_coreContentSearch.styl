.search-wrap
	col(8/8, gutter:0)
	box-sizing border-box
	md-content.md-default-theme
		background-color palette('Grey', '50') 
		md-card
			height:98vh
			box-shadow 0 2px 9px 0 rgba(0,0,0,.26)
			.search
				col(6.4/7, gutter:0)
				shift(.6/7,gutter:0)
				md-input-container
					col(6/7, gutter:0)
					margin 0
					padding 0
				ng-md-icon
					col(.5/7,gutter:0)
					svg
						margin-top .8em
						width 90%
			.content-search
				col(8/9,gutter:0)
				shift(.5/9,gutter:0)
				margin-top 2%
				+desktop()
					col(7.4/9,gutter:0)
					shift(.8/9,gutter:0)
				+hd()
					col(7/9,gutter:0)
					shift(1/9,gutter:0)
				h5
					margin-bottom 7%

				.new-user
					col(8/8,gutter:0)
					margin-bottom 4%
					text-align right
					button.md-button
						width 37%
						min-width 15px
						min-height 33px
						line-height 33px
						font-size 90%
						margin 0
						+desktop()
							width 40%
							min-width 15px
							min-height 43px
							line-height 43px
							font-size 108%
							margin 0
					// text-align center
					// +desktop()
					// 	col(3/8,gutter:0)
				.recent
					col(3.7/8,gutter:0)
					+desktop()
						col(3/8,gutter:0)
					+hd()
						zoom 1.3
				.new
					col(3.7/8,.3/8,gutter:0)
					+desktop()
						col(3/8,2/8,gutter:0)
					+hd()
						zoom 1.3

