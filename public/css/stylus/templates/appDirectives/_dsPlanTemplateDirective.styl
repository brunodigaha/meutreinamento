.ds-plan
	.ds-plan-card
		col(12/12,gutter:0)
		box-sizing border-box
		border 1px solid palette('Grey','200')
		box-shadow: 0px 3px 1px -2px rgba(0, 0, 0, 0.09), 0px 2px 2px 0px rgba(0, 0, 0, 0.098), 0px 1px 5px 0px rgba(0, 0, 0, 0.084);
		margin-bottom 1em
		+desktop()
			margin-bottom 2em
		.ds-plan-card-content
			p
				padding 0
				margin 0
			.ds-plan-title
				col(12/12,gutter:0)
				box-sizing border-box
				padding 7px
				text-align center
				h3
					margin 0
			.ds-plan-content
				col(11/12,gutter:0)
				text-align center
				padding-bottom 3%
			.ds-plan-footer
				col(8/12,gutter:0)
				border-top 1px solid palette('Grey','200')
				box-sizing border-box
				p
					padding-left 1%
					padding-top 1%
					+desktop()
						padding-top 6px
			.ds-plan-actions
				col(4/12,gutter:0)
				box-sizing border-box
				padding-top 5px
				padding-bottom 5px
				text-align center
				border-top 1px solid palette('Grey','200')
				text-align center
				button.md-button
					margin 0
					width 75%
					min-width 15px
					min-height 33px
					line-height 33px
					font-size 95%
