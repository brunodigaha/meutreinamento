.ds-info
	display inline-block
	box-sizing border-box
	min-width 45px
	min-height 25px
	background-color palette('Grey','100')
	box-shadow: 0 2px 3px rgba(0,0,0,.15)
	border-radius 3%
	padding 5px 7px 5px 7px
	text-align center
	margin 8px
	+tablet()
		zoom .9
	.ds-title
		color palette('Grey','800')
		line-height 15px
		font-size 69%
	.ds-content
		color black
		span 
			display block
			line-height 28px
			font-weight bold
			vertical-align middle
